# EVMS Platform Configuration

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
APP_NAME=evms-platform

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_USER=evms_user
NATS_PASSWORD=secure_password
NATS_CLUSTER_ID=evms-cluster
NATS_CLIENT_ID=evms-client
JETSTREAM_ENABLED=true
JETSTREAM_DOMAIN=evms

# Graph Database Configuration (Neo4j)
GRAPH_DB_URL=bolt://localhost:7687
GRAPH_DB_USER=neo4j
GRAPH_DB_PASSWORD=neo4j_password
GRAPH_DB_DATABASE=evms

# NATS Key-Value Store Configuration
NATS_KV_BUCKET=evms-cache
NATS_KV_TTL=3600000
NATS_KV_HISTORY=5
NATS_KV_REPLICAS=1

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000

# GraphRL Configuration
GRAPHRL_MODEL_PATH=./models/graphrl
GRAPHRL_LEARNING_RATE=0.001
GRAPHRL_BATCH_SIZE=32
GRAPHRL_MEMORY_SIZE=100000
GRAPHRL_EPSILON_START=1.0
GRAPHRL_EPSILON_END=0.01
GRAPHRL_EPSILON_DECAY=0.995
GRAPHRL_TARGET_UPDATE_FREQ=1000
GRAPHRL_TRAINING_ENABLED=true

# Scanning Configuration
SCAN_TIMEOUT=3600
MAX_CONCURRENT_SCANS=10
SCAN_RETRY_ATTEMPTS=3
SCAN_RETRY_DELAY=5000
DEFAULT_SCAN_SCHEDULE=0 2 * * *

# Agent Configuration
AGENT_POOL_SIZE=5
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_TIMEOUT=300000
AGENT_MAX_MEMORY=512MB
AGENT_MAX_CPU=1

# Vulnerability Database
CVE_DATABASE_URL=https://cve.mitre.org/data/downloads/allitems.xml
CWE_DATABASE_URL=https://cwe.mitre.org/data/xml/cwec_latest.xml.zip
EXPLOIT_DB_URL=https://www.exploit-db.com/
UPDATE_INTERVAL=86400

# Risk Scoring
RISK_WEIGHTS_CVSS=0.4
RISK_WEIGHTS_EXPLOITABILITY=0.3
RISK_WEIGHTS_ASSET_CRITICALITY=0.2
RISK_WEIGHTS_EXPOSURE=0.1
RISK_THRESHOLD_CRITICAL=9.0
RISK_THRESHOLD_HIGH=7.0
RISK_THRESHOLD_MEDIUM=4.0

# HOTL Configuration
HOTL_REVIEW_THRESHOLD=8.0
HOTL_TIMEOUT=3600
HOTL_ESCALATION_ENABLED=true
HOTL_NOTIFICATION_EMAIL=hotl@organization.com
HOTL_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ELASTIC_APM_ENABLED=false
ELASTIC_APM_SERVER_URL=http://localhost:8200

# Dashboard Configuration
DASHBOARD_PORT=3001
DASHBOARD_REFRESH_INTERVAL=30000
DASHBOARD_MAX_CHART_POINTS=1000
WEBSOCKET_ENABLED=true

# LLM/RAG Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1
RAG_VECTOR_DB_URL=http://localhost:6333
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Notification Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=notifications@organization.com
EMAIL_SMTP_PASSWORD=email_password
EMAIL_FROM=EVMS Platform <notifications@organization.com>

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=evms-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Development Settings
DEBUG_ENABLED=false
MOCK_SCANNING=false
MOCK_VULNERABILITIES=false
TEST_DATA_ENABLED=false

# Performance Tuning
MAX_MEMORY_USAGE=2GB
GC_INTERVAL=300000
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000
BATCH_SIZE=1000

# Compliance & Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION=365
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001,NIST
DATA_RETENTION_DAYS=2555
GDPR_COMPLIANCE=true

# Feature Flags
FEATURE_GRAPHRL_ENABLED=true
FEATURE_HOTL_ENABLED=true
FEATURE_AUTO_REMEDIATION=false
FEATURE_THREAT_INTELLIGENCE=true
FEATURE_COMPLIANCE_SCANNING=true
FEATURE_CHAT_INTERFACE=true
FEATURE_ADVANCED_REPORTING=true