  "name": "evms-platform",
  "version": "1.0.0",
  "description": "Exposure and Vulnerability Management System - Autonomous GraphRL-powered vulnerability scanning and risk assessment platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon src/index.js",
    "start:orchestrator": "node src/services/orchestrator/index.js",
    "start:agents": "node src/services/agents/index.js",
    "start:graphrl": "python src/ml/graphrl/main.py",
    "start:dashboard": "node src/ui/dashboard/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "db:init": "node scripts/init-database.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "docker:build": "docker build -t evms-platform .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "keywords": [
    "vulnerability-management",
    "cybersecurity",
    "graph-neural-networks",
    "reinforcement-learning",
    "autonomous-scanning",
    "risk-assessment",
    "nats",
    "jetstream",
    "graph-database"
  ],
  "author": "EVMS Development Team",
  "license": "MIT",
